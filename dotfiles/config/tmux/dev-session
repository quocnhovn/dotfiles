# Development Session Template
# This file sets up a standard development workspace

new-session -d -s dev

# Window 1: Editor
new-window -t dev:1 -n 'editor' -c '#{pane_current_path}'
send-keys -t dev:1 'nvim' C-m

# Window 2: Terminal
new-window -t dev:2 -n 'terminal' -c '#{pane_current_path}'

# Window 3: Git
new-window -t dev:3 -n 'git' -c '#{pane_current_path}'
send-keys -t dev:3 'git status' C-m

# Window 4: Server/Docker
new-window -t dev:4 -n 'server' -c '#{pane_current_path}'
split-window -h -t dev:4 -c '#{pane_current_path}'
send-keys -t dev:4.0 'echo "Development server window"' C-m
send-keys -t dev:4.1 'echo "Docker/Services window"' C-m

# Window 5: Database/Tools
new-window -t dev:5 -n 'tools' -c '#{pane_current_path}'
split-window -h -t dev:5 -c '#{pane_current_path}'
split-window -v -t dev:5.1 -c '#{pane_current_path}'
send-keys -t dev:5.0 'echo "Database/MySQL window"' C-m
send-keys -t dev:5.1 'echo "Logs window"' C-m
send-keys -t dev:5.2 'htop' C-m

# Select the first window and attach
select-window -t dev:1
