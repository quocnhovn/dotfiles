{
  // Editor Settings
  "editor.fontSize": 14,
  "editor.fontFamily": "'Fira Code', 'Cascadia Code', 'JetBrains Mono', Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.lineHeight": 1.5,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.rulers": [80, 120],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "explicit"
  },
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.acceptSuggestionOnEnter": "on",
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": false
  },

  // File Settings
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 1000,
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "files.insertFinalNewline": true,
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/node_modules": true,
    "**/vendor": true,
    "**/.env": false
  },

  // Search Settings
  "search.exclude": {
    "**/node_modules": true,
    "**/vendor": true,
    "**/dist": true,
    "**/build": true,
    "**/.next": true,
    "**/.nuxt": true,
    "**/coverage": true,
    "**/.git": true
  },

  // Workbench Settings
  "workbench.colorTheme": "Catppuccin Macchiato",
  "workbench.iconTheme": "catppuccin-macchiato",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.enablePreview": false,
  "workbench.editor.closeOnFileDelete": true,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.activityBar.visible": true,
  "workbench.statusBar.visible": true,
  "workbench.sideBar.location": "left",
  "workbench.panel.defaultLocation": "bottom",
  "workbench.tree.indent": 20,

  // Terminal Settings
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontFamily": "'Fira Code', 'JetBrains Mono', Consolas, monospace",
  "terminal.integrated.shell.linux": "/usr/bin/fish",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.cursorStyle": "line",

  // Git Settings
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  "git.decorations.enabled": true,
  "git.defaultCloneDirectory": "~/Development",

  // Language Specific Settings

  // PHP
  "[php]": {
    "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    "editor.tabSize": 4,
    "editor.insertSpaces": true
  },
  "php.validate.executablePath": "/usr/bin/php",
  "php.suggest.basic": false,

  // JavaScript/TypeScript
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "typescript.updateImportsOnFileMove.enabled": "always",
  "javascript.updateImportsOnFileMove.enabled": "always",

  // HTML/CSS
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // JSON
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },

  // Go
  "[go]": {
    "editor.defaultFormatter": "golang.go",
    "editor.tabSize": 4,
    "editor.insertSpaces": false
  },
  "go.formatTool": "goimports",
  "go.lintTool": "golangci-lint",
  "go.lintOnSave": "package",

  // Markdown
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": "off",
      "strings": "off",
      "other": "off"
    }
  },

  // Extension Settings

  // Prettier
  "prettier.singleQuote": true,
  "prettier.semi": true,
  "prettier.tabWidth": 2,
  "prettier.trailingComma": "es5",
  "prettier.printWidth": 80,
  "prettier.bracketSpacing": true,
  "prettier.arrowParens": "avoid",

  // ESLint
  "eslint.validate": ["javascript", "typescript", "vue"],
  "eslint.format.enable": true,

  // Emmet
  "emmet.includeLanguages": {
    "vue-html": "html",
    "blade": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  // Auto Rename Tag
  "auto-rename-tag.activationOnLanguage": ["html", "xml", "php", "vue"],

  // Bracket Pair Colorizer (now built-in)
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,

  // GitLens
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,

  // Docker
  "docker.showStartPage": false,

  // Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,

  // Path Intellisense
  "typescript.suggest.paths": true,
  "javascript.suggest.paths": true,

  // Laravel specific
  "blade.format.enable": true,

  // Tailwind CSS
  "tailwindCSS.includeLanguages": {
    "html": "html",
    "vue": "html",
    "blade": "html",
    "php": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    "class\\s*=\\s*[\"']([^\"']*)[\"']",
    "className\\s*=\\s*[\"']([^\"']*)[\"']",
    "\\bclass:\\s*[\"']([^\"']*)[\"']"
  ],

  // Performance
  "extensions.ignoreRecommendations": false,
  "telemetry.telemetryLevel": "off",
  "update.mode": "manual",

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Zen Mode
  "zenMode.hideStatusBar": false,
  "zenMode.hideActivityBar": false,
  "zenMode.hideTabs": false,

  // Error Lens
  "errorLens.enabledDiagnosticLevels": ["error", "warning"],

  // Code Spell Checker
  "cSpell.enabled": true,
  "cSpell.language": "en,vi",
  "cSpell.userWords": [
    "laravel",
    "codeigniter",
    "symfony",
    "tailwind",
    "deepin",
    "quocnho"
  ],

  // VSCode Neovim Integration
  "vscode-neovim.neovimExecutablePaths.linux": "/usr/bin/nvim",
  "vscode-neovim.neovimInitVimPaths.linux": "~/.config/nvim/init.lua",

  // Project Manager
  "projectManager.git.baseFolders": ["~/Development"],
  "projectManager.git.maxDepthRecursion": 2,

  // Which Key
  "whichkey.bindingOverrides": [
    {
      "keys": "leader.f",
      "name": "Find",
      "type": "bindings",
      "bindings": [
        {
          "key": "f",
          "name": "Find files",
          "type": "command",
          "command": "workbench.action.quickOpen"
        },
        {
          "key": "t",
          "name": "Find text",
          "type": "command",
          "command": "workbench.action.findInFiles"
        }
      ]
    }
  ]
}
